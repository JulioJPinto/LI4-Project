@page "/login"
@using Leilart.Components.Layout
@layout LoginLayout

<div class="flex flex-row">
    <div class="w-full mt-16 mx-16">
        <img src="assets/images/leilart.svg"/>
        <div class="my-64 justify-items-center">
            <div class="w-1/2">
                <h4 class="text-2xl font-semibold my-4">Login</h4>
                <div class="font-regular">Email</div>
                <input class="border-2 py-2 px-4 border-black rounded-sm w-full"/>
